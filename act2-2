#include <iostream>
#include <omp.h>
using namespace std;

#define SIZE 1000000

int v3[SIZE];

int main() {
    int total = 0;
    // initialize v3
    for(int i = 0; i < SIZE; i++) {
        v3[i] = i % 10;
    }
    #pragma omp parallel for shared(total)
    for(int i = 0; i < SIZE; i++) {
        #pragma omp atomic update
        total += v3[i];
    }
    cout << "Total sum: " << total << endl;
    return 0;
}
